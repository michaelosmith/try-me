<div class="p-10 mx-auto mt-10 text-center bg-white border border-gray-300 rounded-lg" style="max-width: 600px">
  <h1 class="mb-3 text-3xl">Join <%= @account.name %></h1>
  <div class="flex items-center justify-center text-gray-800">
    <%= image_tag avatar_url_for(@account_invitation.account), class: "h-5 w-5 rounded-full inline-block mr-1" %>
    <div>
      <%= t(".invited_you_to_join_html", inviter: @account_invitation.invited_by.name, account: @account_invitation.account.name) %>
    </div>
  </div>

  <div class="flex justify-center gap-2 mt-5">
    <%= button_to t(".accept"), account_invitation_path(@account_invitation.token), method: :put, class: "btn btn-primary" %>
    <%= button_to t(".decline"), account_invitation_path(@account_invitation.token), method: :delete, class: "btn btn-white", data: {turbo_confirm: t("are_you_sure")} %>
  </div>
</div>
