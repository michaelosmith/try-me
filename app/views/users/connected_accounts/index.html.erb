<div class="flex flex-wrap my-4 lg:px-4">
  <div class="w-full p-4 lg:w-1/4">
    <%= render partial: "shared/account_navbar" %>
  </div>

  <div class="w-full p-4 lg:w-3/4">
    <div class="p-4 bg-white border border-gray-300 rounded-lg lg:p-10">
      <h2 class="mb-2"><%= t(".title") %></h2>
      <p><%= t(".description") %></p>
      <div class="flex flex-wrap my-2 gap-x-4 gap-y-2">
        <% Devise.omniauth_configs.each do |provider, config| %>
          <%= button_to omniauth_authorize_path(:user, provider), class: "btn btn-#{provider}", data: { turbo: false, disable_with: t(".redirecting") } do %>
            <%= social_icon provider, class: "mr-2" %>
            <%= t("shared.oauth.#{provider}") %>
          <% end %>
        <% end %>
      </div>
      <div class="divide-y">
        <%= render @connected_accounts %>
      </div>
    </div>
  </div>
</div>
