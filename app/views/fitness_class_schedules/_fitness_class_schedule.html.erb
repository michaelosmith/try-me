<div class="table-row" id="<%= dom_id fitness_class_schedule %>">
  <div class="table-cell py-4 pl-4 pr-3 text-sm font-medium text-gray-900 whitespace-nowrap sm:pl-6">
    <img class="object-cover w-10 h-10 rounded-full" src='<%= fitness_class_schedule.fitness_class.image %>' />
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= fitness_class_schedule.fitness_class.name %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= fitness_class_schedule.start_date %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= fitness_class_schedule.start_time %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= fitness_class_schedule.end_time %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500 whitespace-nowrap" id="<%= dom_id fitness_class_schedule %>_bookings_count"><%= fitness_class_bookings_count(fitness_class_schedule) %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= fitness_class_schedule.capacity %></div>
  <div class="relative table-cell py-4 pl-3 pr-4 text-sm font-medium text-right whitespace-nowrap sm:pr-6">
    <%= link_to t("view"), fitness_class_schedule_path(fitness_class_schedule), class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>