<%= turbo_stream_from :fitness_class_schedule %>

<div class="container px-4 mx-auto my-8">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-xl font-semibold text-gray-900">
          <%= @fitness_class_schedule.fitness_class.name %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800"> <%= fitness_class_bookings_count(@fitness_class_schedule) %> </span>
        </h1>
        <%# <p class="mt-2 text-sm text-gray-700">All the upcoming classes scheduled for the studio.</p> %>
      </div>
      
    </div>
    <div class="flex flex-col mt-8">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
            <div class="table min-w-full divide-y divide-gray-300">
              <div class="table-header-group bg-gray-50">
                <div class="table-cell py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"></div>
                <div class="table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">First</div>
                <div class="table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Last</div>
                <div class="table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Email</div>
                <div class="table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Sex</div>              </div>
              <div class="table-row-group bg-white" id="clients">
                <%= render partial: "fitness_class_schedules/show", cached: true %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>