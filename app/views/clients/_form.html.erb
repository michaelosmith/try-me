<%= form_with(model: client) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :mindbody_id %>
    <%= form.text_field :mindbody_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.text_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.text_field :gender, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :member %>
    <%= form.check_box :member, class: "form-checkbox" %>
  </div>

  <div class="form-group">
    <%= form.label :mindbody_profile_created %>
    <%= form.datetime_field :mindbody_profile_created, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :mindbody_profile_updated %>
    <%= form.datetime_field :mindbody_profile_updated, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.number_field :account_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), clients_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), client_path(@client), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
