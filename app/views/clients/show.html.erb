<%= content_for :title, "Clients ##{@client.id}" %>
<%= turbo_stream_from @client %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Clients", clients_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Client #<%= @client.id %>
    </h1>
    <%= link_to t("edit"), edit_client_path(@client), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @client %>
  </div>
</div>
